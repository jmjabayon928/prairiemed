# --- Postgres ---
POSTGRES_DB=PrairieMed
POSTGRES_USER=postgres
POSTGRES_PASSWORD=postgres

# --- Billing (Spring) ---
SERVER_PORT=8081
SPRING_PROFILES_ACTIVE=docker
SPRING_DATASOURCE_URL=jdbc:postgresql://postgres:5432/PrairieMed
SPRING_DATASOURCE_USERNAME=postgres
SPRING_DATASOURCE_PASSWORD=postgres
SPRING_KAFKA_BOOTSTRAP_SERVERS=redpanda:29092
SPRING_DATA_REDIS_HOST=redis
SPRING_DATA_REDIS_PORT=6379

# --- Workers (invoice email) ---
KAFKA_BROKERS=redpanda:29092
SMTP_HOST=mailpit
SMTP_PORT=1025
SMTP_USER=
SMTP_PASS=
SMTP_FROM="PrairieMed <no-reply@prairiemed.local>"

# --- Audit Logger ---
MONGODB_URI=mongodb://mongodb:27017
MONGODB_DB=prairiemed
MONGODB_COLLECTION=audit_logs

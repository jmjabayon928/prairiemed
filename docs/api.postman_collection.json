    {
      "key": "graphql_url",
      "value": "http://localhost:4000/graphql"
    },
    {
      "key": "graphql_bearer",
      "value": "dev-admin"
    },
    {
      "key": "patient_id",
      "value": "767b8d60-7e6b-410f-9de5-cb42292d3c61"
    }
  ]
